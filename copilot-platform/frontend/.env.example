# ============================================================================
# FRONTEND ENVIRONMENT CONFIGURATION
# Microsoft Copilot Onboarding & ROI Platform
# ============================================================================

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Application
VITE_APP_NAME=Microsoft Copilot ROI Platform
VITE_APP_DESCRIPTION=Enterprise platform for Microsoft Copilot adoption and ROI analytics
VITE_APP_VERSION=1.0.0

# Azure AD Authentication
VITE_AZURE_AD_CLIENT_ID=your-azure-ad-client-id
VITE_AZURE_AD_TENANT_ID=your-azure-ad-tenant-id
VITE_AZURE_AD_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_AZURE_AD_AUTHORITY=https://login.microsoftonline.com/

# Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI_FEATURES=false
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true

# Analytics
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=
VITE_HOTJAR_ID=

# Environment
VITE_ENVIRONMENT=development

# External Services
VITE_SUPPORT_EMAIL=support@copilot-platform.com
VITE_DOCUMENTATION_URL=https://docs.copilot-platform.com
VITE_COMMUNITY_URL=https://community.copilot-platform.com

# Feature Flags
VITE_FEATURE_ROI_DASHBOARD=true
VITE_FEATURE_ADOPTION_TRACKING=true
VITE_FEATURE_CONTENT_LIBRARY=true
VITE_FEATURE_LEARNING_PLATFORM=true
VITE_FEATURE_AI_PREDICTIONS=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=en
VITE_ITEMS_PER_PAGE=20
VITE_MAX_UPLOAD_SIZE_MB=10

# Debugging
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=true
