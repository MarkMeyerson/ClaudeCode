{
  "name": "copilot-roi-platform-backend",
  "version": "1.0.0",
  "description": "Backend API for Microsoft Copilot Onboarding & ROI Platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "psql -U postgres -d copilot_roi_platform -f src/database/schemas/01_roi_tracking.sql && psql -U postgres -d copilot_roi_platform -f src/database/schemas/02_adoption_tracking.sql && psql -U postgres -d copilot_roi_platform -f src/database/schemas/03_content_library.sql && psql -U postgres -d copilot_roi_platform -f src/database/schemas/04_integration_automation.sql",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "microsoft-copilot",
    "roi-analytics",
    "adoption-platform",
    "microsoft-365"
  ],
  "author": "Microsoft Copilot ROI Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "axios": "^1.6.2",
    "@azure/identity": "^4.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "node-cron": "^3.0.3",
    "redis": "^4.6.11",
    "bullmq": "^5.0.0",
    "socket.io": "^4.6.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.13.3",
    "@types/uuid": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@types/multer": "^1.4.11",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
