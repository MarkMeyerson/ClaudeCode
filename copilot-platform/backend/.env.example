# ============================================================================
# BACKEND ENVIRONMENT CONFIGURATION
# Microsoft Copilot Onboarding & ROI Platform
# ============================================================================

# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=copilot_roi_platform
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Microsoft Graph API Configuration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_AUTHORITY=https://login.microsoftonline.com/
GRAPH_API_ENDPOINT=https://graph.microsoft.com/v1.0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Email Configuration (SendGrid)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@copilot-platform.com
EMAIL_FROM_NAME=Microsoft Copilot ROI Platform

# Email Configuration (SMTP Alternative)
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER=copilot-platform

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Application Insights
APPLICATION_INSIGHTS_KEY=your-app-insights-instrumentation-key
ENABLE_TELEMETRY=true

# Job Queue Configuration
ENABLE_JOB_QUEUE=true
JOB_QUEUE_CONCURRENCY=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Feature Flags
ENABLE_MICROSOFT_SYNC=true
ENABLE_AI_ANALYTICS=false
ENABLE_WEBHOOKS=false

# ML Services
ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_API_KEY=your-ml-service-api-key

# External APIs
HUBSPOT_API_KEY=your-hubspot-api-key
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Cron Jobs
ENABLE_SCHEDULED_SYNC=true
SYNC_SCHEDULE_USERS=0 2 * * *
SYNC_SCHEDULE_LICENSES=0 3 * * *
SYNC_SCHEDULE_USAGE=0 4 * * *

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx,pptx,xlsx,png,jpg,jpeg,gif

# API Versioning
API_VERSION=v1

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Platform is under maintenance. We'll be back soon!
