{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/assessment/questions",
      "destination": "/api/get-questions"
    },
    {
      "source": "/api/assessment/start",
      "destination": "/api/save-lead"
    },
    {
      "source": "/api/assessment/:id/submit",
      "destination": "/api/submit-assessment?id=:id"
    },
    {
      "source": "/api/assessment/:id/results",
      "destination": "/api/get-results?id=:id"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    }
  ]
}
