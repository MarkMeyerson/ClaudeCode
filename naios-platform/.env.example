# NAIOS Platform Environment Variables
# Copy this file to .env and update with your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_USER=naios_admin
DB_PASSWORD=ChangeMeInProduction!
DB_HOST=localhost
DB_PORT=5432

# Database URLs for each service
ASSESSMENT_DB_URL=postgresql://naios_admin:ChangeMeInProduction!@localhost:5432/assessment_db
DONOR_DB_URL=postgresql://naios_admin:ChangeMeInProduction!@localhost:5432/donor_db
VOLUNTEER_DB_URL=postgresql://naios_admin:ChangeMeInProduction!@localhost:5432/volunteer_db
GRANT_DB_URL=postgresql://naios_admin:ChangeMeInProduction!@localhost:5432/grant_db
IMPACT_DB_URL=postgresql://naios_admin:ChangeMeInProduction!@localhost:5432/impact_db
FINANCIAL_DB_URL=postgresql://naios_admin:ChangeMeInProduction!@localhost:5432/financial_db
CONTENT_DB_URL=postgresql://naios_admin:ChangeMeInProduction!@localhost:5432/content_db
BOARD_DB_URL=postgresql://naios_admin:ChangeMeInProduction!@localhost:5432/board_db
SECURITY_DB_URL=postgresql://naios_admin:ChangeMeInProduction!@localhost:5432/security_db

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=ChangeMeInProduction!
REDIS_URL=redis://:ChangeMeInProduction!@localhost:6379

# ============================================================================
# ELASTICSEARCH CONFIGURATION
# ============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# ============================================================================
# RABBITMQ CONFIGURATION
# ============================================================================
RABBITMQ_USER=naios_admin
RABBITMQ_PASSWORD=ChangeMeInProduction!
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_URL=amqp://naios_admin:ChangeMeInProduction!@localhost:5672

# ============================================================================
# MINIO (OBJECT STORAGE) CONFIGURATION
# ============================================================================
MINIO_ROOT_USER=naios_admin
MINIO_ROOT_PASSWORD=ChangeMeInProduction!
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false

# ============================================================================
# JWT & AUTHENTICATION
# ============================================================================
JWT_SECRET=generate_a_secure_random_string_at_least_64_characters_long
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=generate_another_secure_random_string
JWT_REFRESH_EXPIRY=7d
API_KEY_SECRET=generate_api_key_secret

# ============================================================================
# ENCRYPTION
# ============================================================================
ENCRYPTION_KEY=generate_a_32_byte_hex_string_for_aes_256
ENCRYPTION_ALGORITHM=aes-256-gcm

# ============================================================================
# STRIPE INTEGRATION
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# ============================================================================
# HUBSPOT INTEGRATION
# ============================================================================
HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_PORTAL_ID=your_portal_id
HUBSPOT_OAUTH_CLIENT_ID=your_client_id
HUBSPOT_OAUTH_CLIENT_SECRET=your_client_secret

# ============================================================================
# NOTION INTEGRATION (MCP)
# ============================================================================
NOTION_API_KEY=secret_your_notion_integration_token
NOTION_WORKSPACE_ID=your_workspace_id
NOTION_DATABASE_ID=your_database_id

# ============================================================================
# MICROSOFT 365 INTEGRATION
# ============================================================================
MICROSOFT_CLIENT_ID=your_azure_ad_client_id
MICROSOFT_CLIENT_SECRET=your_azure_ad_client_secret
MICROSOFT_TENANT_ID=your_tenant_id
MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# ============================================================================
# GOOGLE WORKSPACE INTEGRATION
# ============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_ANALYTICS_ID=your_analytics_id

# ============================================================================
# QUICKBOOKS INTEGRATION
# ============================================================================
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/auth/quickbooks/callback
QUICKBOOKS_ENVIRONMENT=sandbox

# ============================================================================
# MAILCHIMP INTEGRATION
# ============================================================================
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_LIST_ID=your_list_id

# ============================================================================
# TWILIO INTEGRATION
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# SLACK INTEGRATION
# ============================================================================
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your_signing_secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# ZOOM INTEGRATION
# ============================================================================
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret
ZOOM_OAUTH_CLIENT_ID=your_client_id
ZOOM_OAUTH_CLIENT_SECRET=your_client_secret

# ============================================================================
# OPENAI API (for AI features)
# ============================================================================
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_ORGANIZATION_ID=org-your_organization_id
OPENAI_MODEL=gpt-4-turbo-preview

# ============================================================================
# SENDGRID (Email delivery)
# ============================================================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yournonprofit.org
SENDGRID_FROM_NAME=Your Non-Profit Name

# ============================================================================
# AWS CONFIGURATION (if using AWS services)
# ============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=naios-platform-storage

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:80
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=your_sentry_dsn
GRAFANA_PASSWORD=admin

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_SECRET=generate_a_secure_session_secret
SESSION_TIMEOUT=86400000

# ============================================================================
# FILE UPLOAD
# ============================================================================
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,jpg,jpeg,png,gif

# ============================================================================
# WEBHOOKS
# ============================================================================
WEBHOOK_SECRET=generate_a_webhook_secret

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true
ENABLE_TWO_FACTOR_AUTH=true

# ============================================================================
# COMPLIANCE
# ============================================================================
GDPR_ENABLED=true
CCPA_ENABLED=true
HIPAA_ENABLED=false
DATA_RETENTION_DAYS=2555
